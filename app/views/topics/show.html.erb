<div class="white-background">

	<div class="navigator">
		<%=link_to @current_topic.catalog.name, root_url+"?catalog="+(get_catalog_index @current_topic.catalog).to_s %> > <%= @current_topic.name %> 
	</div>	

<% if @posts.empty? %>
	<p class="no_post">还没有帖子发表，请您发表第一篇</p>
<% else %>
	<%= render @posts %>
<% end %>
</div>