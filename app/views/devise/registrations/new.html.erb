<div class="white-background">
<p class="form-title bold">Sign up</p>

<div class="offset2">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="bold">姓名:</div>
    <%= f.input :name, :required => true, input_html:{class: "input-box"}, label: false, :autofocus => true %>
    <div class="bold">Email:</div>
    <%= f.input :email, :required => true,input_html:{class: "input-box"}, :autofocus => true, label: false  %>
    <div class="bold">密码:</div>
    <%= f.input :password, :required => true,input_html:{class: "input-box"}, label: false %>
    <div class="bold">确认密码:</div>
    <%= f.input :password_confirmation,input_html:{class: "input-box"}, :required => true, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" , class: "btn btn-primary " %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
</div>