<h2>Profile</h2>

<%= simple_form_for :profile, method: :put, remote: true do |f| %>
	<div class="photo_tag">
		Photo
	</div> 
	<%= image_tag @user.image_url, class: "icon_edit left_margin_10px" %>
	
	<div class="profile_element">
  <%= f.input :name,required: false, input_html: {class: 'left_margin_10px', value: current_user.name}%>
  </div>

 	<div class="profile_element">
  <%= f.button :submit, "Update profile",class: "btn btn-primary" %>
  </div>
<% end %>